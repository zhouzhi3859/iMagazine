{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": false,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "alwaysStrict": true,
    "charset": "utf8",
    "checkJs": false,
    "declaration": false,
    "diagnostics": false,
    "disableSizeLimit": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "listEmittedFiles": true,
    "listFiles": false,
    "module": "commonjs",
    "newLine": "LF",
    "noFallthroughCasesInSwitch": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "pretty": true,
    "removeComments": true,
    "sourceMap": false,
    "strict": true,
    "target": "es2017"
  },
  "include": [
    "app.ts",
    "app/**/*.ts",
    "config/**/*.ts"
  ],
  "exclude": [
    "app/public",
    "node_modules"
  ]
}
